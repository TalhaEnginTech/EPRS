


<%if user_signed_in? %>

  <h1>Users List</h1>

  <table class="table table-striped table-hover">
    <thead class="thead-dark ">
    <tr>
      <th>Name</th>
      <th>CNIC</th>
      <th>Email</th>
      <th>Joining Date</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.cnic %></td>
        <td><%= user.email %></td>
        <td><%= user.joindate %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_path(user)%></td>
        <%if current_user.role=="HR" %>
        <td><%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure"} %></td>
          <%end %>
        <%end %>
      </tr>

    </tbody>
  </table>
  <br>
  <%if current_user.role== "HR"  %>
  <%= link_to 'Add Employees', new_user_path, class:"btn btn-info"%>

    <%end %>
<%else %>
  <h3>You need to Sign In!</h3>
<%end %>